<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gray_gradient">


<ScrollView

android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/scrollView">


<RelativeLayout
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    >
        <LinearLayout
            android:id="@+id/ipContainer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:id="@+id/ipLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP:"
                android:textSize="28sp"
                android:textColor="@android:color/holo_blue_bright"
                />
            <EditText
                android:id="@+id/ipEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Server IP"
                android:textSize="26sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginLeft="5dp"
                android:textColorHint="@android:color/holo_blue_light"
                android:inputType="text"
                />
        </LinearLayout>

    <ImageView
        android:id="@+id/connectionImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ipContainer"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/connect"/>
        <View
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ipContainer"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/timeTextView"
        android:text="13:37"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="140dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/seperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/songTextView"
        android:layout_below="@id/timeTextView"
        android:textColor="@android:color/holo_blue_light"
        android:text="n  o  S  Ï€  o  o  z  e"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/artistTextView"
        android:layout_below="@id/songTextView"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:id="@+id/mediaButtonsContainer"
        android:layout_below="@id/artistTextView"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/previousButton"
            android:background="@drawable/previous1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/pauseButton"
            android:background="@drawable/pause2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/playButton"
            android:background="@drawable/play2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/nextButton"
            android:background="@drawable/next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>




    </RelativeLayout>
</ScrollView>



</RelativeLayout>
